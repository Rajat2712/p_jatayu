<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/splash"
    >

    <Toolbar
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:navigationIcon="@mipmap/exit"
        >
    </Toolbar>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Pick your service"
        android:textSize="40dp"
        android:gravity="center_horizontal"
     android:layout_marginTop="20dp"
        />
    <android.support.v7.widget.AppCompatSpinner
        android:layout_width="300dp"
        android:layout_height="20dp"
        android:backgroundTint="@color/clipartcolor"
        android:layout_gravity="center_horizontal"
        android:id="@+id/service_spinner"
        android:filterTouchesWhenObscured="true"
        >
    </android.support.v7.widget.AppCompatSpinner>
    <RelativeLayout
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_gravity="center_horizontal"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="tsf"
            android:textSize="20dp"
            android:textStyle="bold"
            android:id="@+id/ser_title"
            android:visibility="invisible"
            android:layout_marginLeft="10dp"
            android:textColor="@color/clipartcolor"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="25dp"
            android:visibility="invisible"
            android:layout_below="@+id/ser_title"
            android:textStyle="italic"
            android:id="@+id/ser_info"
            />
    </RelativeLayout>
</LinearLayout>